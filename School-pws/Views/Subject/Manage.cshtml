@model IEnumerable<School_pws.Data.Entities.Subject>

@{
    ViewData["Title"] = "Manage Subjects";
}

<h1 class="mb-3">Manage Subjects</h1>

@if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New <i class="fa-solid fa-plus"></i></a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Workload)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th class="w-25">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Workload)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit <i class="fa-solid fa-pen-to-square"></i></a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details <i class="fa-solid fa-circle-info"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete <i class="fa-solid fa-trash"></i></a>
                    }
                    else
                    {
                        @if (item.IsActive == false)
                        {
                            <a asp-action="ActivateDesactivate" asp-route-id="@item.Id" class="btn btn-success">Activate <i class="fa-solid fa-circle-check"></i></a>
                        }
                        else
                        {
                            <a asp-action="ActivateDesactivate" asp-route-id="@item.Id" class="btn btn-danger">Deactivate <i class="fa-solid fa-power-off"></i></a>
                        }

                    }
                </td>
            </tr>
        }
    </tbody>
</table>