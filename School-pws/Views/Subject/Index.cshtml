@model IEnumerable<School_pws.Data.Entities.Subject>

@{
    ViewData["Title"] = "Subjects";
}

<h2 class="mb-4">Our Subjects</h2>

<div class="row">
    @foreach (var subject in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="p-3 text-light" style="background-color: #052c65">
                    <h5 class="card-title">
                        @subject.Name <i class="fa-solid fa-book"></i>
                    </h5>
                    <h6 class="card-subtitle">@subject.Code</h6>
                </div>

                <div class="card-body d-flex flex-column pt-0">
                    <hr />
                    <p class="card-text text-truncate-7" style="text-align: justify;">
                        @subject.Description
                    </p>
                    <p class="mt-auto">
                        <span class="badge bg-primary">
                            Workload: @subject.Workload hours <i class="fa-solid fa-clock"></i>
                        </span>
                    </p>
                </div>
            </div>
        </div>
    }
</div>
