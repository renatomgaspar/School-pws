@model School_pws.Models.Users.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div class="form-group mb-2 text-center">
                <img src="~/images/userDefaultImage.png" alt="Image" class="rounded-circle" style="width:150px; height:150px; object-fit:cover;">
            </div>
            <div class="form-group mb-2">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-warning"></span>
            </div>
            <div class="form-group mb-2">
                <div class="form-check">
                    <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">Remember Me?</label>
                </div>
                <span asp-validation-for="RememberMe" class="text-warning"></span>
            </div>
            <div class="form-group mb-2">
                <button type="submit" class="btn btn-success">Login <i class="fa-solid fa-circle-check"></i></button>
                <a asp-action="RecoveryPasswordEmail" class="btn btn-secondary">Recovery Password <i class="fa-solid fa-key"></i></a>
            </div>
        </form>
        <div asp-validation-summary="ModelOnly"></div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}