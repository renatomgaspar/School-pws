@model School_pws.Models.Users.ActiveAccountViewModel

@{
    ViewData["Title"] = "Activate Account";
}

<h2>Activate Your Account</h2>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-2">
                <label asp-for="NewPassword">New password</label>
                <input asp-for="NewPassword" type="password" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-warning"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Confirm">Confirm</label>
                <input asp-for="Confirm" type="password" class="form-control" />
                <span asp-validation-for="Confirm" class="text-warning"></span>
            </div>

            <div class="form-group mb-2">
                <button type="submit" value="" class="btn btn-primary">Activate Account <i class="fa-solid fa-pen-to-square"></i></button>
                <a asp-action="Login" class="btn btn-success">Go to Login <i class="fa-solid fa-circle-left"></i></a>
            </div>
        </form>

        <div asp-validation-summary="ModelOnly"></div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}