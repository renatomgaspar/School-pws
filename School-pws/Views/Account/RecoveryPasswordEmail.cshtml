@model School_pws.Models.Users.EmailViewModel

@{
    ViewData["Title"] = "Recovery Password";
}

<h2>Recovery Password from your Account</h2>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div class="form-group mb-2">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>

            <div class="form-group mb-2">
                <button type="submit" class="btn btn-success">Recovery Password <i class="fa-solid fa-circle-check"></i></button>
                <a asp-action="Login" class="btn btn-secondary">Login <i class="fa-solid fa-key"></i></a>
            </div>
        </form>

        <div asp-validation-summary="ModelOnly"></div>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}