@model School_pws.Models.Users.RegisterNewUserViewModel

@if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin"))
{
    <h2>Register User</h2>
    ViewData["Title"] = "Register User";
}
else
{
    <h2>Register Student</h2>
    ViewData["Title"] = "Register Student";
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form method="post" enctype="multipart/form-data">
            <div class="form-group mb-2">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-warning"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-warning"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-warning"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Confirm">Confirm</label>
                <input asp-for="Confirm" type="password" class="form-control" />
                <span asp-validation-for="Confirm" class="text-warning"></span>
            </div>

            @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin"))
            {
                <div class="form-group mb-3">
                    <label asp-for="Role" class="form-label"></label>
                    <select asp-for="Role" asp-items="Model.Roles" class="form-select"></select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
            }

            <div class="form-group mb-3">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control" type="file" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <button type="submit" class="btn btn-primary">Register New User <i class="fa-solid fa-floppy-disk"></i></button>
                <a asp-action="Manage" class="btn btn-success">Back to List <i class="fa-solid fa-circle-left"></i></a>
            </div>
        </form>

        <div asp-validation-summary="ModelOnly"></div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}