@model IEnumerable<School_pws.Data.Entities.ApplicationDetailsTemp>
@{
    ViewData["Title"] = "Create Application";
}

<h2>Create Application</h2>


<p>
    <a asp-action="AddSubject" class="btn btn-success">Add Subject</a>
    <a asp-action="ConfirmApplication" class="btn btn-primary" id="btnConfirm">Confirm Application</a>
    <a asp-action="Index" class="btn btn-secondary">Go Back</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Subject.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Grade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td id="@item.Id">
                    <a asp-action="DeleteItem" asp-route-id="@item.Id" class="btn btn-danger" id="btnDeleteItem">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>