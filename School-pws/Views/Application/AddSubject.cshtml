@model School_pws.Models.Applications.AddApplicationViewModel
@{
    ViewData["Title"] = "Add Subject";
}

<h2>Add Subject</h2>

<h4>To Application</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddSubject">
            <div class="form-group mb-2">
                <label asp-for="SubjectId" class="control-label"></label>
                <select asp-for="SubjectId" asp-items="Model.Subjects" class="form-control"></select>
                <span asp-validation-for="SubjectId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </form>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}